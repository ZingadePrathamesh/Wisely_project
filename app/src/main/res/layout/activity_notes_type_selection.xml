<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes_heading_text_view"
        android:text="NOTES"
        android:textSize="32sp"
        android:layout_margin="8sp"
        android:textColor="@color/white"
        android:background="@drawable/heading_bg"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8sp"
        android:layout_below="@+id/notes_heading_text_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0sp"
                android:layout_height="168sp"
                android:layout_weight="1"
                android:text="BOOKS"
                android:id="@+id/books_button"/>
            <Button
                android:layout_width="0sp"
                android:layout_height="168sp"
                android:layout_weight="1"
                android:text="Question Papers"
                android:id="@+id/qp_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
            android:layout_width="0sp"
            android:layout_height="48sp"
            android:layout_weight="1"
            android:text="BOOKS"
                android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/dark_teal" />
            <TextView
                android:layout_width="0sp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:text="NOTES"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/dark_teal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8sp">
            <Button
                android:layout_width="0sp"
                android:layout_height="168sp"
                android:layout_weight="1"
                android:text="Chit Sheet"
                android:id="@+id/chit_button"/>
            <Button
                android:layout_width="0sp"
                android:layout_height="168sp"
                android:layout_weight="1"
                android:text="NOTEPAD"
                android:id="@+id/notepad_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:text="CHIT SHEET"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/dark_teal" />
            <TextView
                android:layout_width="0sp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:text="NOTEPAD"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/dark_teal"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>