        android:gravity="center"
        android:text="First Semester "
        android:textColor="@color/white"
        android:textSize="32sp"
        android:id="@+id/sub_heading_text_view"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <ScrollView
